<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.resultstrack.navigationdrawer1.DashboardFragment">

    <!-- TODO: Update blank fragment layout -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:rowCount="3"
        android:columnCount="2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_column="0"
            android:layout_row="0">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_dashboard_children"
                android:id="@+id/imageViewChildren"/>

            <TextView
                android:id="@+id/txtTotalChildren"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:text="Registered Children" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_column="1"
            android:layout_row="0">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_dashboard_commem"
                android:id="@+id/imageViewComMem" />
            <TextView
                android:id="@+id/txtComMem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:text="Committee Members" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_column="0"
            android:layout_row="1">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_dashboard_mom"
                android:id="@+id/imageViewMom" />

            <TextView
                android:id="@+id/txtMom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:text="Minutes of meeting" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_column="1"
            android:layout_row="1">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_dashboard_sync_o"
                android:id="@+id/imageViewDownloadUpdates" />
            <TextView
                android:id="@+id/txtSyncDownloads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:text="Download Updates" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_column="0"
            android:layout_row="2">

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:drawingCacheQuality="auto"
                app:srcCompat="@drawable/ic_dashboard_sync_o"
                android:id="@+id/imageButtonSyncNow"
                android:elevation="0dp"
                android:scaleType="centerInside" />
            <TextView
                android:id="@+id/txtAllSync1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:text="Sync Now" />
        </LinearLayout>

    </GridLayout>

    <!--<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Dashboard" />
    </LinearLayout>-->


</FrameLayout>
